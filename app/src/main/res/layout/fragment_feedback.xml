<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="kevts.washington.edu.fiternity.FeedbackActivity$PlaceholderFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="How was ______ with ______?"
            android:id="@+id/feedback_question"
            android:layout_weight="0.5"
            android:gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/feedback_negative_btn"
                android:minHeight="150dp"
                android:minWidth="150dp"
                android:src="@drawable/sad_face"
                android:layout_alignTop="@+id/feedback_positive_btn"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/feedback_positive_btn"
                android:minHeight="150dp"
                android:minWidth="150dp"
                android:src="@drawable/happy_face"
                android:layout_below="@+id/feedback_question"
                android:layout_toRightOf="@+id/feedback_negative_btn"
                android:layout_toEndOf="@+id/feedback_negative_btn" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
