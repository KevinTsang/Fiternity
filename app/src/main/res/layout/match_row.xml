<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="88dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingEnd="8dp"
    android:paddingStart="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/match_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:layout_marginRight="16dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/match_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:textColor="#ff000000"
                android:text="Matcher&apos;s Name"
                style="@style/Base.TextAppearance.AppCompat.Body2" />

            <TextView android:id="@+id/match_exercise"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:autoText="false"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <TextView style="@style/Base.TextAppearance.AppCompat.Small"
            android:id="@+id/match_start_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:text="Start Time" />

        <TextView style="@style/Base.TextAppearance.AppCompat.Small"
            android:id="@+id/match_end_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:text="End Time" />
    </LinearLayout>

</LinearLayout>
